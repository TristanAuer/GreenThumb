@model IEnumerable<GreenThumb.Models.GardenList>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GardenId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GardenName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlantType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlantCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GardenId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GardenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.GardenId  }) |
                @Html.ActionLink("Details", "Details", new { id=item.GardenId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.GardenId })
            </td>
        </tr>
    }

</table>
