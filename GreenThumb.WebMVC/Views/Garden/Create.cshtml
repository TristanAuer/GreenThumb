@model GreenThumb.Models.GardenCreate

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Garden", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Garden Create</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.GardenName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GardenName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GardenName, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.PlantType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Artichoke) @Html.Label("Artichoke")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Arugula) @Html.Label("Arugula")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.AsianGreens) @Html.Label("AsianGreens")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Asparagus) @Html.Label("Asparagus")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Beans) @Html.Label("Beans")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Beets) @Html.Label("Beets")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Broccoli) @Html.Label("Broccoli")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Carrots) @Html.Label("Carrots")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Lettuce) @Html.Label("Lettuce")
            @Html.RadioButtonFor(model => model.PlantType, GreenThumb.Data.Plants.Radish) @Html.Label("Radish")

        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.PlantCount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PlantCount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PlantCount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
